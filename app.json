{
  "expo": {
    "name": "Study Tracker",
    "slug": "study-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "studytracker",
    "userInterfaceStyle": "automatic",

    "icon": "./assets/images/icon.png",

    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },

    "assetBundlePatterns": ["**/*"],

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.xuange.studytracker",
      "icon": "./assets/images/icon.png"
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundColor": "#000000"
      },
      "package": "com.xuange.studytracker"
    },

    "web": {
      "favicon": "./assets/images/favicon.png"
    },

    "extra": {
      "eas": {
        "projectId": "local-mode"
      }
    }
  }
}
